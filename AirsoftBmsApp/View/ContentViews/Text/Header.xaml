<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AirsoftBmsApp.View.ContentViews.Text"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AirsoftBmsApp.View.ContentViews.Text.Header">
    <Label 
        FontFamily="{StaticResource GlobalFont}" 
        FontSize="30" 
        HorizontalOptions="Center"
        Text="{Binding Text,Source={RelativeSource AncestorType={x:Type local:Header}}}"
        />
</ContentView>
