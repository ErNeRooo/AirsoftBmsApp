<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirsoftBmsApp.View.ContentViews.TeamSummary.TeamSummary"
             xmlns:models="clr-namespace:AirsoftBmsApp.Model.Observable"
             xmlns:text="clr-namespace:AirsoftBmsApp.View.ContentViews.Text"
             x:DataType="models:ObservableTeamSummary"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:langs="clr-namespace:AirsoftBmsApp.Resources.Languages"
             >
    <Grid
        RowDefinitions="auto,auto,auto"
        >
        <Label
            Grid.Row="0"
            Text="{Binding TeamName}" 
            TextColor="{Binding TeamTheme.TitleColor}"
            FontSize="24"
            FontFamily="{StaticResource GlobalFont}"
            HorizontalOptions="Center"
            />

        <Border
            Grid.Row="1"
            HorizontalOptions="Fill"
            Padding="10"
            BackgroundColor="{Binding TeamTheme.BackgroundColor}"
            StrokeShape="RoundRectangle 15"
            StrokeThickness="0"
        >
            <Grid RowDefinitions="auto,auto,auto,auto">
                <Label 
                    Grid.Row="0" 
                    Text="{Static langs:AppResources.ForcesLabel}"
                    TextColor="{Binding TeamTheme.FontColor}"
                    FontFamily="{StaticResource GlobalFont}"
                    />
                <Label 
                    Grid.Row="1" 
                    Text="{Binding PlayerCount, StringFormat={Static langs:AppResources.ForcesInFieldText}}"
                    TextColor="{toolkit:AppThemeResource Text}"
                    FontAttributes="Bold"
                    Margin="16,0,0,0"
                    FontFamily="{StaticResource GlobalFont}"
                    />

                <Label 
                    Grid.Row="2" 
                    Text="{Static langs:AppResources.CasualtiesLabel}"
                    TextColor="{Binding TeamTheme.FontColor}"
                    FontFamily="{StaticResource GlobalFont}"
                    />
                <Label 
                    Grid.Row="3" 
                    Text="{Binding DeathsCount, StringFormat={Static langs:AppResources.CasualtiesKilledText}}"
                    TextColor="{toolkit:AppThemeResource Text}"
                    FontAttributes="Bold"
                    Margin="16,0,0,0"
                    FontFamily="{StaticResource GlobalFont}"
                    />
            </Grid>
        </Border>

        <Label 
            Grid.Row="2"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="40"
            Text="{Static langs:AppResources.VS}"
            IsVisible="{Binding IsLast, Converter={StaticResource InverseBoolConverter}}"
            HorizontalOptions="Center"
            Margin="0,20,0,10"
            />
    </Grid>
</ContentView>
