<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="AirsoftBmsApp.View.ContentViews.Dialogs.ConfirmationDialog"
    x:Name="ConfirmationDialogView">

    <ContentView.Triggers>
        <DataTrigger 
            TargetType="ContentView"
            Binding="{Binding Message, Source={x:Reference ConfirmationDialogView}}"
            Value=""
            >
            <Setter Property="IsVisible" Value="False" />
        </DataTrigger>
    </ContentView.Triggers>

    <Grid   
       BackgroundColor="#80000000"   
       VerticalOptions="Fill"  
       CascadeInputTransparent="False"  
       HorizontalOptions="Fill">

        <Grid.GestureRecognizers>
            <TapGestureRecognizer/>
        </Grid.GestureRecognizers>

        <Border
            Stroke="{toolkit:AppThemeResource Outline}"
            StrokeShape="RoundRectangle 30"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="{toolkit:AppThemeResource SurfaceSecond}"
            >
            <Grid 
                WidthRequest="300"
                ColumnDefinitions="*,1,*"
                RowDefinitions="auto,1,auto"
                BindingContext="{Binding Source={x:Reference ConfirmationDialogView}}"
                >
                <Label
                    Grid.ColumnSpan="3"
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="10"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Message}"
                    FontSize="16"
                    FontFamily="{StaticResource GlobalFont}"
                    />

                <BoxView 
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalOptions="Fill"
                    HeightRequest="1"
                    BackgroundColor="{toolkit:AppThemeResource Outline}"
                    />

                <Button
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Yes"
                    FontSize="16"
                    FontFamily="{StaticResource GlobalFont}"
                    BackgroundColor="Transparent"
                    TextColor="{toolkit:AppThemeResource Text}"
                    Padding="0"
                    MaximumHeightRequest="30"
                    Command="{Binding ConfirmCommand}"
                    />

                <BoxView 
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalOptions="Fill"
                    WidthRequest="1"
                    BackgroundColor="{toolkit:AppThemeResource Outline}"
                />

                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Text="No"
                    Padding="0"
                    FontSize="16"
                    MaximumHeightRequest="30"
                    BackgroundColor="Transparent"
                    TextColor="{toolkit:AppThemeResource Text}"
                    FontFamily="{StaticResource GlobalFont}"
                    Clicked="ClearMessage"
                    />

            </Grid>
        </Border>
    </Grid>

    
</ContentView>
