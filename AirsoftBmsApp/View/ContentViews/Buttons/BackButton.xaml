<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:AirsoftBmsApp.View.ContentViews.Buttons"
             x:Class="AirsoftBmsApp.View.ContentViews.Buttons.BackButton"
             HorizontalOptions="Center">
    <Button 
        Height="30"
        HorizontalOptions="Center"
        BackgroundColor="Transparent"
        TextColor="{StaticResource SecondaryDarkText}"
        BorderColor="Transparent"
        BorderWidth="2"
        FontFamily="CascadiaCode" 
        CornerRadius="25"
        Text="{Binding Text, Source={RelativeSource AncestorType={x:Type buttons:BackButton}}}"
        FontSize="20"
        Padding="10, 0"
        Clicked="OnBackButtonClicked"
    />
</ContentView>
