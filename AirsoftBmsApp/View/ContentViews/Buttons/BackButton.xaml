<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:buttons="clr-namespace:AirsoftBmsApp.View.ContentViews.Buttons"
             x:Class="AirsoftBmsApp.View.ContentViews.Buttons.BackButton"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             HorizontalOptions="Center">
    <Button 
        Height="30"
        HorizontalOptions="Center"
        BackgroundColor="Transparent"
        TextColor="{toolkit:AppThemeResource TextSecond}"
        BorderColor="Transparent"
        BorderWidth="2"
        FontFamily="{StaticResource GlobalFont}" 
        CornerRadius="25"
        BindingContext="{Binding Source={RelativeSource AncestorType={x:Type buttons:BackButton}}}"
        Text="{Binding Text}"
        FontSize="20"
        Padding="10, 0"
        Command="{Binding Command}"
        CommandParameter="{Binding CommandParameter}"
    />
</ContentView>
