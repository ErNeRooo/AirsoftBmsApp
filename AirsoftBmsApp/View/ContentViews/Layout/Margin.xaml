<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AirsoftBmsApp.View.ContentViews.Layout"
             x:Class="AirsoftBmsApp.View.ContentViews.Layout.Margin">
    <BoxView 
        Opacity="0"
        WidthRequest="{Binding Size, Source={RelativeSource AncestorType={x:Type local:Margin}}}"
        HeightRequest="{Binding Size, Source={RelativeSource AncestorType={x:Type local:Margin}}}"
        />
</ContentView>
