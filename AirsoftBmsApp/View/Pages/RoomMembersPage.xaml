<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirsoftBmsApp.View.Pages.RoomMembersPage"
             xmlns:team="clr-namespace:AirsoftBmsApp.View.ContentViews.Team"
             xmlns:viewModel="clr-namespace:AirsoftBmsApp.ViewModel"
             x:DataType="viewModel:RoomViewModel"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightAppBackgroundColor}, Dark={StaticResource DarkAppBackgroundColor}}"
             Title="RoomMembersPage">

    <VerticalStackLayout
        Padding="40, 20"
        >
        <FlexLayout
            JustifyContent="SpaceBetween"
            AlignItems="Center"
            Margin="0, 0, 0, 20"
            >
            <Label 
                Text="Room 021370"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                FontSize="30"
                TextColor="{StaticResource Primary}"
                FontFamily="CascadiaCode"
                />

            <Button
                Padding="0"
                MaximumHeightRequest="30"
                WidthRequest="100"
                Text="Leave"
                CornerRadius="25"
                FontFamily="CascadiaCode"
                />
        </FlexLayout>

        <CollectionView ItemsSource="{Binding Teams}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <team:TeamView></team:TeamView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>