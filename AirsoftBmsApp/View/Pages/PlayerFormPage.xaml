<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:AirsoftBmsApp.ViewModel"
             xmlns:forms="clr-namespace:AirsoftBmsApp.View.ContentViews.Forms"
             xmlns:text="clr-namespace:AirsoftBmsApp.View.ContentViews.Text"
             x:Class="AirsoftBmsApp.PlayerFormPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightAppBackgroundColor}, Dark={StaticResource DarkAppBackgroundColor}}"
             x:DataType="viewModel:FormViewModel"
             >

    <VerticalStackLayout 
        VerticalOptions="Center" 
        Padding="40"
        MaximumWidthRequest="600"
        >
        <text:Header
            Text="Without Account"
        />

        <forms:StyledEntry 
            Placeholder="Enter your username"
            />

        <forms:FilledButton 
            Command="{Binding RegisterPlayer}"
            />

        <text:ResizableLabelWithHorizontalLine
            Text="OR"
            />

        <text:Header
            Text="With Account"
            />

        <forms:OutlinedButton
            Clicked="OnLogInButtonClicked"
            Text="Log In"
            />

        <forms:OutlinedButton
            Clicked="OnSignUpButtonClicked"
            Text="Sign Up"
            />

    </VerticalStackLayout>

</ContentPage>
